<a href="/dashboard" class="btn btn-secondary">Go Back to Dashboard</a>

<article class="new-page">
    <section class="edit-post">
        <form action="/api/posts/{{id}}" method="POST" id="edit-post-form">
            <div class="post-title">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="{{title}}">
            </div>
            <div class="post-content">
                <label for="content">Content</label>
                <textarea name="content" id="content" cols="30" rows="10">{{content}}</textarea>
            </div>
            <button class="btn" type="submit">Update Post</button>
            <input type="hidden" name="post_id" value="{{id}}">
        </form>
        <button class="btn btn-danger" id="delete-post">Delete Post</button>
    </section>
</article>

{{#if loggedIn}}
<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
{{/if}}
